{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "release",
      "displayName": "DLL build",
      "description": "DLL build using Ninja generator",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_C_STANDARD": "11",
        "CMAKE_C_STANDARD_REQUIRED": "ON",
        "CMAKE_C_EXTENSIONS": "OFF",
        "CMAKE_RC_COMPILER": "llvm-rc",
        "CMAKE_RC_FLAGS": "-C 65001",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "FORMAT_SOURCES": "ON"
      },
      "environment": {}
    }
  ]
}